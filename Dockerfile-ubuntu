# dockerfile1
# Usa la imagen base de Ubuntu 18.04
FROM ubuntu:18.04

# Instalar dependencias necesarias
RUN apt-get update && \
    apt-get install -y curl gpg wget gcc make libssl-dev libreadline-dev zlib1g-dev

# Crear y establecer permisos para el directorio de claves GPG
RUN curl -sSL https://rvm.io/mpapis.asc | gpg --import -

